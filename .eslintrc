parser: babel-eslint
extends: airbnb

plugins:
  - import

rules:
  global-require: 0

  max-len: 0

  no-console: 0
  no-constant-condition: 0
  no-underscore-dangle: 0
  no-unused-vars:
  - error
  - varsIgnorePattern: ignored

  react/prefer-stateless-function: 0

settings:
  import/resolver:
    webpack:
      config: 'webpack.config.babel.js'
